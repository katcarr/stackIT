<!DOCTYPE html>
<html>
<head>
  <title>StackOverflowClone</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='//fonts.googleapis.com/css?family=Antic+Slab' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="nav-bar navbar-default">
    <div class="container-fluid">
      <div class="navbar-header">
        <a class="navbar-brand" href="/">StackIT</a>
        <ul class="nav navbar-nav">
          <li>
            <% if current_user %>
            <%= link_to "Profile Page", user_path(current_user) %>
          </li>
          <li>
            <%= link_to "Questions", questions_path %>
            <% end %>
          </li>
        </ul>
      </div>
      <div class="nav navbar-nav navbar-right">
        <%= link_to "Log Out", log_out_path, class: ["btn", "btn-danger", 'btn-xs', "log-out"]  %>
      </div>
    </div>

  </nav>



<div class="container">

  <%= flash[:alert]%>
  <%= flash[:notice]%>
  <%= yield %>
</div>
</body>
</html>
